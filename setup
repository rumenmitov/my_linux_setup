echo "Setup is beginning!"
echo "___________________"
cd
sudo chmod +x ~/my_linux_setup/bashrc
sudo mv ~/my_linux_setup/bashrc ..
sudo rm .bashrc
sudo mv bashrc .bashrc
sudo chmod +x ~/my_linux_setup/bar.sh
sudo apt install i3
sudo apt install thunar
sudo apt install lxappearance
sudo apt install compton
sudo apt install feh
sudo apt install rofi
sudo mkdir ~/.config/i3
sudo mkdir ~/fonts
sudo mv ~/my_linux_setup/webfonts ~/fonts && sudo mv ~/my_linux_setup/openSans_font ~/fonts
sudo mv ~/my_linux_setup/bar.sh ~/.config/i3
sudo mv ~/my_linux_setup/config ~/.config/i3/
sudo mv ~/my_linux_setup/rofi ~/.config
sudo apt install gnome-terminal
